
mixin checkbox(name, checked, checkboxAttrs, inputAttrs, labelAttrs, presentationAttrs)
  // checkbox
  .checkbox&attributes(checkboxAttrs)
    input.checkbox__input(
      type="checkbox"
      id=Id.nextId()
      name=name
      checked=checked)&attributes(inputAttrs)
    label.checkbox__label(for=Id.id())&attributes(labelAttrs)
      span.checkbox__presentation&attributes(presentationAttrs)
      block
  // /checkbox