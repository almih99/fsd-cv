include ../button/button.pug

mixin toxin-main-menu(isLogged=false, outerAttrs)
  // toxin-main-menu
  nav.horizontal-menu
    a.toxin-logo.horizontal-menu__logo(href="#")
    button.horizontal-menu__toggle-view(type="button")
      span.horizontal-menu__hr
      span.horizontal-menu__hr
      span.horizontal-menu__hr
    ul.horizontal-menu__main-list
      li.horizontal-menu__item.horizontal-menu__item_current
        a.horizontal-menu__link(href="#") О нас
      li.horizontal-menu__item.horizontal-menu__item_dropdown
        a.horizontal-menu__link(href="#") Услуги
        ul.horizontal-menu__submenu-list.horizontal-menu__submenu-list_position_center
          li.horizontal-menu__submenu-list-item
            a.horizontal-menu__submenu-link(href="#") Парим
          li.horizontal-menu__submenu-list-item
            a.horizontal-menu__submenu-link(href="#") Варим
          li.horizontal-menu__submenu-list-item
            a.horizontal-menu__submenu-link(href="#") Жарим 
      li.horizontal-menu__item
        a.horizontal-menu__link(href="#") Вакансии
      li.horizontal-menu__item
        a.horizontal-menu__link(href="#") Новости
      li.horizontal-menu__item.horizontal-menu__item_dropdown
        a.horizontal-menu__link(href="#") Соглашения
        ul.horizontal-menu__submenu-list.horizontal-menu__submenu-list_position_center
          li.horizontal-menu__submenu-list-item
            a.horizontal-menu__submenu-link(href="#") Об уплате алиментов
          li.horizontal-menu__submenu-list-item
            a.horizontal-menu__submenu-link(href="#") О расторжении договора
          li.horizontal-menu__submenu-list-item
            a.horizontal-menu__submenu-link(href="#") О разделе имущества
      unless isLogged  
        li.horizontal-menu__item
          +button(
            {class: "horizontal-menu__enter-button button_white"}) Войти
        li.horizontal-menu__item
          +button(
            {class: "horizontal-menu__register-button"}) Зарегистрироваться
  // /toxin-main-menu
